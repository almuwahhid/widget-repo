<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.gamatechno.pakaryo.widget.materialcalendar.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        app:headerColor="@color/colorAccent"
        app:headerLabelColor="@android:color/white"
        app:type="classic"
        app:selectionLabelColor="@color/disabledDialogButtonColor"
        app:pagesColor="@color/colorAccent"
        app:abbreviationsBarColor="@color/colorAccent"
        android:layout_height="wrap_content" />

</RelativeLayout>